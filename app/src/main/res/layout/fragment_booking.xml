<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 标题栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="确认订单"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="16dp"
            android:text="退改说明"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <!-- 日期选择 -->
    <LinearLayout
        android:id="@+id/date_selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/tv_previous_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="前一天"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="03月26日 周三"
            android:textColor="@color/secondary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_next_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="10dp"
            android:text="后一天"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- 车次信息 -->
    <LinearLayout
        android:id="@+id/train_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/date_selection">
        <!-- Train Info Row -->
        <LinearLayout
            android:id="@+id/train_info_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Departure Time -->
            <TextView
                android:id="@+id/tv_departure_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16:22"
                android:textColor="@color/font_title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Train Number -->
            <TextView
                android:id="@+id/tv_train_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="G1223"
                android:textColor="@color/font_title"
                android:textSize="18sp" />

            <!-- Arrival Time -->
            <TextView
                android:id="@+id/tv_arrival_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="17:37"
                android:textColor="@color/font_title"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- Station Info Row -->
        <LinearLayout
            android:id="@+id/llStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/train_info_row">

            <TextView
                android:id="@+id/tv_departure_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="南京南"
                android:textColor="@color/font_text" />


            <!-- Duration -->
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1小时15分"
                android:textColor="@color/font_text"
                android:textSize="14sp" />

            <!-- Arrival Station -->
            <TextView
                android:id="@+id/tv_arrival_station"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="杭州东"
                android:textColor="@color/font_text" />
        </LinearLayout>
        <View
            android:id="@+id/dotted"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/dotted_line"
            app:layout_constraintTop_toBottomOf="@id/train_info"/>
    </LinearLayout>

    <!-- 票种选择 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seat_level_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:scrollbars="none"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/train_info" />

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/seat_level_list">

        <!-- Passenger Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Passenger Name -->
            <TextView
                android:id="@+id/passenger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <!-- Ticket Type -->
            <TextView
                android:id="@+id/ticket_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成人票"
                android:textColor="#0088CC"
                android:textSize="18sp"
                android:layout_marginStart="12dp" />

            <!-- Seat Class -->
            <TextView
                android:id="@+id/seat_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二等"
                android:textColor="#0088CC"
                android:textSize="14sp"
                android:layout_marginStart="12dp" />

            <!-- Delete Button -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_24px"
                android:background="@null"
                android:contentDescription="Delete passenger" />
        </LinearLayout>

        <!-- ID Number -->
        <TextView
            android:id="@+id/id_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5002**********891"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F5F5F5"
            android:layout_marginTop="6dp"
            />

        <!-- Select Passenger Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_circle_24px"
                app:tint="#FF8900" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择乘车人"
                android:textColor="#FF6600"
                android:textSize="16sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- 选座服务 - Seat Selection Service Section -->
    <LinearLayout
        android:id="@+id/seat_selection_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="6dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/info">

        <!-- Title Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="20dp">

            <!-- Left Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选座服务"
                android:textSize="14sp"
                android:textColor="#F78C2D" />

            <!-- Right Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可选择1个座位"
                android:textSize="14sp"
                android:textColor="@color/secondary" />
        </LinearLayout>

        <!-- Seat Selection Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Window Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="窗"
                android:textSize="18sp"
                android:textColor="#333333" />

            <!-- Seat A -->
            <ImageView
                android:id="@+id/seat_a"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/seat_a" />

            <!-- Seat B -->
            <ImageView
                android:id="@+id/seat_b"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/seat_b" />

            <!-- Seat C -->
            <ImageView
                android:id="@+id/seat_c"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/seat_c" />

            <!-- Aisle Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="过道"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <!-- Seat D -->
            <ImageView
                android:id="@+id/seat_d"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/seat_d" />

            <!-- Seat F -->
            <ImageView
                android:id="@+id/seat_f"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/seat_f" />

            <!-- Window Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="窗"
                android:textSize="18sp"
                android:textColor="#333333" />
        </LinearLayout>

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="若剩余席位无法满足您的需求，系统将自动为您分配席位。"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- 提交订单 -->
    <Button
        android:id="@+id/btn_submit_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@color/primary"
        android:text="提交订单"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/seat_selection_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
